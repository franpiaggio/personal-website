---
const projects = [
  {
    name: "p5-ai",
    description: "Online P5.js editor with built-in AI features. Create generative art assisted by artificial intelligence.",
    tech: ["TypeScript", "p5.js", "AI"],
    github: "https://github.com/franpiaggio/p5-ai",
    live: null as string | null,
  },
  {
    name: "mars_explorer",
    description: "Application to explore Mars rover photos using NASA's API. Built with Vite, React and TypeScript.",
    tech: ["TypeScript", "React", "Vite", "NASA API"],
    github: "https://github.com/franpiaggio/mars_explorer",
    live: "https://marsroverexplorer.vercel.app",
  },
];
---

<section class="relative z-10 py-24 px-6">
  <div class="max-w-3xl mx-auto">
    <div class="flex items-center gap-3 mb-10">
      <span class="font-mono text-xs text-primary tracking-widest uppercase">// projects</span>
      <div class="flex-1 h-px bg-border"></div>
    </div>

    <div class="space-y-4">
      {projects.map((project) => (
        <div class="group p-6 rounded-xl border border-border bg-card hover:border-primary/30 hover:bg-surface-hover transition-all duration-300 border-glow">
          <div class="flex items-start justify-between mb-3">
            <div class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              <h3 class="font-mono text-lg font-semibold text-foreground group-hover:text-primary transition-colors">
                {project.name}
              </h3>
            </div>
            <div class="flex items-center gap-3">
              <a
                href={project.github}
                target="_blank"
                rel="noopener noreferrer"
                class="text-muted-foreground hover:text-primary transition-colors"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              </a>
              {project.live && (
                <a
                  href={project.live}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-muted-foreground hover:text-primary transition-colors"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg>
                </a>
              )}
            </div>
          </div>

          <p class="text-sm text-secondary-foreground mb-4 leading-relaxed">
            {project.description}
          </p>

          <div class="flex flex-wrap gap-2">
            {project.tech.map((t) => (
              <span class="font-mono text-[10px] px-2 py-0.5 rounded bg-muted text-muted-foreground">
                {t}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
